<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="world" default="empty"/>
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <!-- <arg name="world_name" default="$(find vribot_gazebo)/worlds/lab.world"/> -->

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find vribot_gazebo)/worlds/lab.world"/> -->
    <arg name="world_name" value="$(find vribot_gazebo)/worlds/lab_wip2.world"/>

    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <param name="robot_description" command="xacro '$(find vribot_description)/urdf/vribot.xacro'"/>

  <node name="vribot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model vribot -x 0.0 -y 0.0 -z 0.0 -Y 0.0"/>

  <rosparam command="load" file="$(find vribot_control)/config/vribot_control.yaml" />

</launch>
