<?xml version='1.0'?>

<robot name="vribot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find vribot_description)/urdf/p3dx/materials.xacro"/>
  <xacro:include filename="$(find vribot_description)/urdf/p3dx/p3dx_wheel.xacro"/>

  <!-- BEGIN turtlebot CONVENTION -->
  <link name="base_footprint"/>
  <!--
     Base link is set at the bottom of the base mould.
     This is done to be compatible with the way base link
     was configured for turtlebot 1. Refer to

     https://github.com/turtlebot/turtlebot/issues/40

     To put the base link at the more oft used wheel
     axis, set the z-distance from the base_footprint
     to 0.352.
    -->
  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>
  <!-- END turtlebot CONVENTION -->

  <!-- chassis -->
  <link name="base_link">
    <inertial>
      <mass value="3.5"/>
      <!--<origin xyz="-0.025 0 -0.223"/> -->
      <origin xyz="-0.05 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>

    <visual name="base_link">
      <origin xyz="-0.045 0 0.148" rpy="0 0 0"/>
      <geometry name="pioneer_geom">
        <mesh filename="package://vribot_description/meshes/p3dx/chassis.stl"/>
      </geometry>
      <material name="ChassisRed"/>
    </visual>

    <collision>
      <origin xyz="-0.045 0 0.145" rpy="0 0 0"/>
      <geometry>
        <box size="0.35 0.25 0.14"/>
      </geometry>
    </collision>
  </link>

  <!-- top_plate -->
  <link name="top_plate">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>

    <visual name="top_plate">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry name="top_geom">
        <mesh filename="package://vribot_description/meshes/p3dx/top.stl"/>
      </geometry>
      <material name="TopBlack"/>
    </visual>

    <collision>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <geometry name="pioneer_geom">
        <box size="0.45 0.38 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- swivel -->
  <link name="swivel">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>

    <visual name="base_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry name="pioneer_geom">
        <mesh filename="package://vribot_description/meshes/p3dx/swivel.stl"/>
      </geometry>
      <material name="swivel">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- center_hubcap -->
  <link name="center_hubcap">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.012411765597" ixy="-0.000711733678" ixz="0.00050272983" iyy="0.015218160428" iyz="-0.000004273467" izz="0.011763977943"/>
    </inertial>

    <visual name="base_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry name="pioneer_geom">
        <mesh filename="package://vribot_description/meshes/p3dx/center_hubcap.stl"/>
      </geometry>
      <material name="swivel">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- center_wheel -->
  <link name="center_wheel">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.012411765597" ixy="-0.000711733678" ixz="0.00050272983" iyy="0.015218160428" iyz="-0.000004273467" izz="0.011763977943"/>
    </inertial>

    <visual name="base_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry name="pioneer_geom">
        <mesh filename="package://vribot_description/meshes/p3dx/center_wheel.stl"/>
      </geometry>
      <material name="WheelBlack"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="${-3.1415927/2.0} 0 0"/>
      <geometry>
        <cylinder radius="0.0375" length="0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- front_sonar -->
  <link name="sonar">
    <inertial>
      <mass value="0.0001"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>

    <visual name="sonar_vis">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry name="pioneer_geom">
        <mesh filename="package://vribot_description/meshes/p3dx/front_sonar.stl"/>
      </geometry>
      <material name="SonarYellow"/>
    </visual>

    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints must be correctly ordered to work with iGibson -->
  <xacro:p3dx_wheel suffix="left" parent="base_link" reflect="1"/>
  <xacro:p3dx_wheel suffix="right" parent="base_link" reflect="-1"/>

  <joint name="base_top_joint" type="fixed">
    <origin xyz="-0.045 0 0.234" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="top_plate"/>
  </joint>

  <joint name="base_swivel_joint" type="continuous">
    <origin xyz="-0.185 0 0.055" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <anchor xyz="0 0 0"/>
    <limit effort="100" velocity="100" k_velocity="0"/>
    <joint_properties damping="0.0" friction="0.0"/>
    <parent link="base_link"/>
    <child link="swivel"/>
  </joint>

  <joint name="swivel_hubcap_joint" type="continuous">
    <origin xyz="-0.026 0 -0.016" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <anchor xyz="0 0 0"/>
    <limit effort="100" velocity="100" k_velocity="0"/>
    <joint_properties damping="0.0" friction="0.0"/>
    <parent link="swivel"/>
    <child link="center_wheel"/>
  </joint>

  <joint name="center_wheel_joint" type="fixed">
    <origin xyz="-0.0035 0 -0.001" rpy="0 0 0"/>
    <parent link="center_wheel"/>
    <child link="center_hubcap"/>
  </joint>

  <joint name="base_front_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0.109 0 0.209"/>
    <parent link="base_link"/>
    <child link="sonar"/>
  </joint>
</robot>
